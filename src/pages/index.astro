---
"";
import "@styles/globals.css";
import CumtualElevamos from "@components/SVG/CumtualElevamos.astro";
import BotonHomeSeleccionarIdioma from "@components/Ui/BotonHomeSeleccionarIdioma";
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Cumtual</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <meta
      property="og:image"
      content={"https://cumtual.com/fondo.webp"}
    />
    <meta property="og:type" content="website" />
    <meta property="og:image:width" content="25" />
    <meta property="og:image:height" content="25" />
    <meta property="og:description" content="Somos una empresa dedicada a la creación de páginas web, diseño de marcas y almacenamiento web." />
    <meta property="og:url" content="https://www.cumtual.com" />
    <meta property="og:type" content="website" />
    <meta name="twitter:title" content="Cumtual - Elevamos tu idea." />
    <meta name="twitter:description" content="Ofrecemos servicios de desarrollo web, incluyendo sitios web personalizados, landing pages, blogs, tiendas e-commerce y mucho más. Contáctanos para hacer crecer tu negocio online." />
    <meta name="twitter:image" content="https://cumtual.com/logocumtual-23.webp" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="description" content="Ofrecemos servicios de desarrollo web, incluyendo sitios web personalizados, landing pages, blogs, tiendas e-commerce y mucho más. Contáctanos para hacer crecer tu negocio online." />
    <meta name="keywords" content="desarrollo web, landing pages, blogs, ecommerce, diseño web, desarrollo de tiendas online, desarrollo de sitios web" />
    <meta name="robots" content="index, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Cumtual" />
    <link rel="canonical" href="https://www.cumtual.com" />
    <link rel="alternate" hreflang="es" href="https://www.cumtual.com" />
    <link rel="alternate" hreflang="en" href="https://www.cumtual.com" />
  </head>
  <body class="bg-bg-gray-cumtual w-full h-screen">
    <section class="p-10 flex flex-col justify-center items-center h-[550px]">
      <CumtualElevamos />
      <div class="mt-20">
        <div id="languageSwitcher" class="text-2xl font-bold p-10">
          <p class="text-center">Elige un idioma</p>
          <p class="text-center hidden">Choose a language</p>
        </div>
      </div>
      <div>
        <BotonHomeSeleccionarIdioma client:load />
      </div>
    </section>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const userLang = navigator.language;
        const currentPath = window.location.pathname;
        if (userLang.startsWith("es") && currentPath !== "/es-MX") {
          window.location.href = "/es-MX";
        } else if (userLang.startsWith("en") && currentPath !== "/en-EU") {
          window.location.href = "/en-EN";
        } else if (currentPath !== "/es-MX" && currentPath !== "/en-EU") {
          window.location.href = "/es-MX";
        }
        const switcher = document.getElementById("languageSwitcher");
        const texts = switcher.getElementsByTagName("p");
        let current = 0;

        setInterval(() => {
          // Añadir animación para ocultar el texto actual
          texts[current].classList.add(
            "opacity-0",
            "transition-opacity",
            "duration-500"
          );

          setTimeout(() => {
            // Ocultar el texto actual después de la animación
            texts[current].classList.add("hidden");

            // Alternar al siguiente texto
            current = (current + 1) % texts.length;
            texts[current].classList.remove("hidden");

            // Mostrar el siguiente texto con animación
            setTimeout(() => {
              texts[current].classList.remove("opacity-0");
              texts[current].classList.add("opacity-100");
            }, 10); // Pequeña demora para la animación
          }, 500); // Duración de la animación de salida (0.5s)
        }, 3000); // Intervalo de 3 segundos
      });
    </script>
  </body>
</html>
